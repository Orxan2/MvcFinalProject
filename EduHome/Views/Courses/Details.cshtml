@model CourseDetailVM
@{
    ViewData["Title"] = "Details";
}


<!-- Course Details Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/img/course/@Model.Course.Image" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Course.Title.ToUpper()</h2>
                        <p>@Model.Course.Text</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.Course.AboutCourse</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.Course.HowToApply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p class="margin">@Model.Course.Certification</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@(Model.Course.CreatedDate)</span></li>
                                <li>duration <span>@Model.Course.Feature.Duration Month</span></li>
                                <li>class duration <span>@Model.Course.Feature.LessonTime hours</span></li>
                                <li>skill level <span>@Model.Course.Feature.SkillLevel</span></li>
                                <li>language <span>@Model.Course.Feature.Language.ToUpper()</span></li>
                                <li>students <span>@Model.Course.Feature.StudentQuantity</span></li>
                                <li>assesments <span>@Model.Course.Feature.Assesments</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.Course.Feature.Fee</h3>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <ul class="list-group border-0 my-4">
                            @foreach (var message in Model.PostMessages)
                            {
                                <li class="list-group-item list-group-item-info border-0">
                                    <h1>@message.Email</h1>
                                    <p>@message.Message</p>
                                </li>
                            }
                        </ul>
                        <form method="post">
                            <div class="row">
                                <div class="col-md-12 my-3">
                                    <label asp-for="PostMessage.Name">Name</label>
                                    <input asp-for="PostMessage.Name" class="form-control" />
                                    <span asp-validation-for="PostMessage.Name" class="text-danger mb-1"></span>
                                </div>
                                <div class="col-md-12 my-3">
                                    <label asp-for="PostMessage.Email">Email</label>
                                    <input asp-for="PostMessage.Email" class="form-control mb-1" />
                                    <span asp-validation-for="PostMessage.Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 my-3">
                                    <label asp-for="PostMessage.Subject">Subject</label>
                                    <input asp-for="PostMessage.Subject" class="form-control mb-1" />
                                    <span asp-validation-for="PostMessage.Subject" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 my-5">
                                    <label asp-for="PostMessage.Message">Message</label>
                                    <textarea asp-for="PostMessage.Message" class="form-control mb-1"></textarea>
                                    <span asp-validation-for="PostMessage.Message" class="text-danger py-1"></span>
                                </div>
                            </div>
                            <button type="submit" class="form-control">Send</button>
                        </form>
                    </div>
                </div>
            </div>

            @await Component.InvokeAsync("LatestPosts")
        </div>
    </div>
</div>
<!-- Course Details End -->

@section validate {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}