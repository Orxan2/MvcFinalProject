@model List<Event>
@{
    ViewData["Title"] = "Event";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner")
<!-- Banner Area End -->

<!-- Event Start -->
<div class="event-area three text-left pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (Event ev in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-event mb-60">
                        <div class="event-img">
                            <a href="event-details.html">
                                <img src="~/img/event/@ev.Image" alt="event">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date">
                                <h3>20 <span>jun</span></h3>
                            </div>
                        </div>
                        <div class="event-content text-left">
                            <h4><a href="event-details.html">@ev.Title</a></h4>
                            <ul>
                                <li><span>time:</span> @ev.TimeInterval.Name</li>
                                <li><span>venue</span> @ev.Address</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-action="Detail" asp-route-id="@ev.Id">join now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Event End -->