@model ContactVM
@{
    ViewData["Title"] = "Index";
}
<!-- Contact Start -->
<div class="map-area">
    <!-- google-map-area start -->
    <div class="google-map-area">
        <!--  Map Section -->
        <div id="contacts" class="map-area">
            <div id="googleMap" style="width:100%;height:440px;"></div>
        </div>
    </div>
</div>
<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="single-contact mb-65">
                            <div class="contact-icon">
                                <img src="~/img/contact/@address.Image" alt="contact">
                            </div>
                            <div class="contact-add">
                                <h3>address</h3>
                                <p>@address.Street</p>
                                <p>@address.City, USA</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="reply-area">
                    <h3>LEAVE A REPLY</h3>
                   
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="PostMessage.Name">Name</label>
                                <input asp-for="PostMessage.Name" class="form-control" />
                                <span asp-validation-for="PostMessage.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="PostMessage.Email">Email</label>
                                <input asp-for="PostMessage.Email" class="form-control" />
                                <span asp-validation-for="PostMessage.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="PostMessage.Subject">Subject</label>
                                <input asp-for="PostMessage.Subject" class="form-control" />
                                <span asp-validation-for="PostMessage.Subject" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="PostMessage.Message">Message</label>
                                <textarea asp-for="PostMessage.Message" class="form-control"></textarea>
                                <span asp-validation-for="PostMessage.Message" class="text-danger py-1"></span>
                            </div>
                        </div>
                        <button type="submit" class="form-control">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
