@model List<Teacher>
@{
    Layout = null;
}

@foreach (var teacher in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-controller="Teacher" asp-action="Details" asp-route-id="@teacher.Id" ><img src="img/teacher/@teacher.Image" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a href="teacher-details.html">@teacher.Fullname.ToUpper()</a></h2>
                <h4>@teacher.Professional</h4>
                <ul>
                    <li><a asp-host="@teacher.Facebook" target="_blank"><i class="zmdi zmdi-facebook"></i></a></li>
                    <li><a asp-host="@teacher.Pinterest" target="_blank"><i class="zmdi zmdi-pinterest"></i></a></li>
                    <li><a asp-host="@teacher.Vimeo" target="_blank"><i class="zmdi zmdi-vimeo"></i></a></li>
                    <li><a asp-host="@teacher.Twitter" target="_blank"><i class="zmdi zmdi-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
}