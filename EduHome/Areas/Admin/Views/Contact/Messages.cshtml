@model List<PostMessage>
@{
    ViewData["Title"] = "Messages";
}


<div class="content sm-gutter">
    <div class="page-title">
        <h1>Contact Messages</h1>
    </div>

    <div class="row">

        <div id="email-list">
            <table class="table table-striped table-fixed-layout table-hover" id="emails">
                <thead>
                    <tr>
                        <th class="small-cell">
                        </th>

                        <th class="medium-cell">
                        </th>
                        <th>
                        </th>
                        <th class="medium-cell">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <td class="clickable v-align-middle">
                                <div class="check-success">
                                    <a asp-action="MessageDelete" asp-route-id="@message.Id" class="btn btn-danger-dark p-2 d-inline-block"><i class="fa fa-trash-o"></i></a>
                                </div>
                            </td>
                            <td class="clickable v-align-middle">
                                <p class="py-2">@message.Name</p>
                            </td>
                            <td class="clickable tablefull v-align-middle">
                                <p class="muted py-2"> @(message.Message.Length > 20 ? message.Message.Substring(0, 20) : message.Message)</p>
                            </td>
                            <td class="clickable">
                                <p class="muted py-2">Yesterday</p>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

    <div class="admin-bar" id="quick-access">
        <div class="admin-bar-inner">
            <button class="btn btn-danger btn-add" type="button"><i class="icon-trash"></i> Move to trash</button>
            <button class="btn btn-white btn-cancel" type="button">Cancel</button>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/assets/js/email_comman.js"></script>
} 