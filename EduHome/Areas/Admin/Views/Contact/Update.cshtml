@model ContactVM
@{
    ViewData["Title"] = "Update";
}


<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Input <span class="semi-bold">Helpers</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body no-border">
                <form enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="Address.Id" />
                    <div class="mb-3">
                        <label asp-for="Address.City">City</label>
                        <input asp-for="Address.City" class="form-control" />
                        <span asp-validation-for="Address.City"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address.Street">Street</label>
                        <input asp-for="Address.Street" class="form-control" />
                        <span asp-validation-for="Address.Street"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address.Photo">Image</label>
                        <img src="~/img/contact/@Model.Address.Image" width="50" />
                        <input asp-for="Address.Photo" class="form-control" accept="image/*" />
                        <span asp-validation-for="Address.Photo"></span>
                    </div>
                    <button type="submit" class="btn btn-primary" asp-route-image="@Model.Address.Image">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>