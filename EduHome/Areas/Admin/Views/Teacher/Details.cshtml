@model Teacher
@{
    ViewData["Title"] = "Details";
}
<div class="content sm-gutter">
    <div class="page-title">
        <h1>Teacher Details</h1>
        <a asp-action="Index" class="btn btn-success text-light"><i class="fa fa-arrow-left"></i></a>
    </div>

    <div class="row">
        <div class="row my-5">
            <div class="col-md-4 d-flex justify-content-center align-items-center">
                <h3 class="fw-bold text-warning">Created date :</h3>
            </div>
            <div class="col-md-8">
                <h3>@Model.Fullname</h3>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <h3 class="fw-bold text-warning">Image :</h3>
        </div>
        <div class="col-md-8">
            <img src="~/img/teacher/@Model.Image" width="500" height="300" alt="blog-details">
        </div>
    </div>
    <div class="row my-5">
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <h3 class="fw-bold text-warning">About :</h3>
        </div>
        <div class="col-md-8">
            <h3>@Model.AboutTeacher</h3>
        </div>
    </div>       
    <div class="row my-5">
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <h3 class="fw-bold text-warning">Experience</h3>
        </div>
        <div class="col-md-8">
            <h3>@Model.Experience Year</h3>>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <h3 class="fw-bold text-warning">Text :</h3>
        </div>
        <div class="col-md-8">
            <h3> @Model.Hobbies</h3>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <h3 class="fw-bold text-warning">Course</h3>
        </div>
        <div class="col-md-8">
            <h3>@Model.Course</h3>
        </div>
    </div>
</div>
