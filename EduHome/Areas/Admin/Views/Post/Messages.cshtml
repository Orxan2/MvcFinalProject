@model List<PostMessage>
@{
    ViewData["Title"] = "Blog's Messages";
}


<div class="content sm-gutter">
    <div class="page-title">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row">
        <div id="email-list">
            <table class="table table-striped table-fixed-layout table-hover" id="emails">
                <thead>
                    <tr>
                        <th class="medium-cell">
                            <h6 class="fw-bold text-center">Do It</h6>
                        </th>
                        <th class="medium-cell">
                            <h6 class="fw-bold text-center">Status</h6>
                        </th>
                        <th class="medium-cell">
                            <h6 class="fw-bold text-center">User</h6>
                        </th>
                        <th>
                            <h6 class="fw-bold text-center">Comment</h6>                            
                        </th>
                        <th class="medium-cell text-center">
                            <h6 class="fw-bold text-center">Date</h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                    <tr>
                        <td class="clickable v-align-middle">
                            <div class="check-success text-center">
                                <a asp-action="MessageDeleteOrActive" asp-route-id="@message.Id" class="btn p-2 @(message.IsDeleted?"bg-success text-white":"bg-danger text-white")"><i class="@(message.IsDeleted?"fa fa-unlock":"fa fa-lock")"></i></a>
                            </div>
                        </td>
                        <td class="clickable v-align-middle">
                            <p class="py-2 text-center">@(message.IsDeleted?"Active":"Deactive")</p>
                        </td>
                        <td class="clickable v-align-middle">
                            <p class="py-2 text-center">@message.Name</p>
                        </td>
                        <td class="clickable tablefull v-align-middle">
                            <p class="muted py-2 text-center"> @(message.Message.Length > 20 ? message.Message.Substring(0, 20) : message.Message)</p>
                        </td>
                        <td class="clickable">
                            <p class="muted py-2 text-center">Yesterday</p>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

    <div class="admin-bar" id="quick-access">
        <div class="admin-bar-inner">
            <button class="btn btn-danger btn-add" type="button"><i class="icon-trash"></i> Move to trash</button>
            <button class="btn btn-white btn-cancel" type="button">Cancel</button>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/assets/js/email_comman.js"></script>
} 