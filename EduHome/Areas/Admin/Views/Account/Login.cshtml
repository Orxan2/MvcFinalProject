@model AdminLoginVM
@{
    ViewData["Title"] = "Login";
}
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert text-danger"></div>

                                <div class="form-group my-4">
                                    <input asp-for="Username" class="form-control my-2" placeholder="UserName">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-group my-4">
                                    <input asp-for="Password" class="form-control my-2" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary submit-btn btn-block">Login</button>
                                </div>
                                <div class="text-block text-center my-4">
                                    <span class="text-small font-weight-semibold">Create An Account</span>
                                    <a asp-action="Register" class="text-black text-small">Sign Up</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end --> 