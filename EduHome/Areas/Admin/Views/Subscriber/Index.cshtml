@model List<Subscriber>
@{
    ViewData["Title"] = "Subscribers";
}


<div class="content sm-gutter">
    <div class="page-title">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row">
        <div id="email-list">
            <table class="table table-striped table-fixed-layout table-hover" id="emails">
                <thead>
                    <tr>
                        <th class="medium-cell">
                            <h6 class="fw-bold text-center">Do It</h6>
                        </th>
                        <th class="medium-cell">
                            <h6 class="fw-bold text-center">Status</h6>
                        </th>
                        <th class="medium-cell">
                            <h6 class="fw-bold text-center">Subscribed Email</h6>
                        </th>                      
                        <th class="medium-cell text-center">
                            <h6 class="fw-bold text-center">Date</h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subscriber in Model)
                    {
                        <tr>
                            <td class="clickable v-align-middle">
                                <div class="check-success text-center">
                                    <a asp-action="MakeDeleteOrActive" asp-route-id="@subscriber.Id" class="btn p-2 @(subscriber.IsDeleted?" bg-danger text-white":"bg-success text-white")"><i class="@(subscriber.IsDeleted?" fa fa-lock":"fa fa-unlock")"></i></a>
                                </div>
                            </td>
                            <td class="clickable v-align-middle">
                                <p class="py-2 text-center">@(subscriber.IsDeleted?"Active":"Deactive")</p>
                            </td>
                            <td class="clickable v-align-middle">
                                <p class="py-2 text-center">@subscriber.Email</p>
                            </td>                          
                            <td class="clickable">
                                <p class="muted py-2 text-center">@subscriber.CreatedDate.ToString()</p>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

    <div class="admin-bar" id="quick-access">
        <div class="admin-bar-inner">
            <button class="btn btn-danger btn-add" type="button"><i class="icon-trash"></i> Move to trash</button>
            <button class="btn btn-white btn-cancel" type="button">Cancel</button>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/assets/js/email_comman.js"></script>
} 