@model PostVM
@{
    ViewData["Title"] = "Index";
}

    <div class="content sm-gutter">
        <div class="page-title">
            <h1>Blogs</h1>
        </div>

        <div class="row">
            <table class="table table-hover no-more-tables">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Author</th>
                        <th>Blog Title</th>
                        <th>Blog Text</th>
                        <th>Created Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Posts)
                    {
                    <tr>
                        <td>1</td>
                        <td>@item.ByWhom</td>
                        <td>@item.Title</td>
                        <td>@item.Details.Substring(0, 20)...</td>
                        <td>@item.Date</td>
                        <td>
                            <ul class="d-flex list-unstyled">
                                <li><a class="btn btn-warning"><i class="fa fa-pencil"></i></a></li>
                                <li><a class="btn btn-primary"><i class="fa fa-info"></i></a></li>
                                <li><a asp-controller="Dashboard" asp-action="DeleteOrActive" asp-route-id="@item.Id" class="btn @(item.IsDeleted?"btn-success":"btn-danger")"><i class="@(item.IsDeleted?"fa fa-check-square":"fa fa-trash-o")"></i></a></li>
                            </ul>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>       
    </div>